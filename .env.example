# Penser à configurer votre fichier .env.local en dupliquant .env.example avec vos propres valeurs

# Adresse email utilisée pour les communications de contact
CONTACT_EMAIL=

# URI de connexion à la base de données MongoDB
# Remplacez USER, PASSWORD et COLLECTION par vos informations
MONGODB_URI="mongodb+srv://USER:PASSWORD@cluster.mongodb.net/COLLECTION?retryWrites=true&w=majority"

# Clé secrète utilisée par NextAuth pour signer les tokens
NEXTAUTH_SECRET=

# URL de base pour les redirections d'authentification
NEXTAUTH_URL=

# URL de base de l'API TMDB (The Movie Database)
TMDB_API_BASE=https://api.themoviedb.org/3

# Jeton d'accès pour l'API TMDB
TMDB_ACCESS_TOKEN=

# URL publique du site (utilisée pour les métadonnées et les redirections)
NEXT_PUBLIC_SITE_URL=https://watch-listy-one.vercel.app

# Clé de vérification Google pour la Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Clé API pour Brevo pour l'envoi d'emails
BREVO_API_KEY=

# Adresse email utilisée pour l'envoi des emails via Brevo
BREVO_EMAIL_ADDRESS=